<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_header"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF"
                android:contentDescription="Back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CSCI 145"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Programming"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/professorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¨â€ðŸ« Professor: Name"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/scheduleDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ• Schedule"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/locationDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Location"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/semesterDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Semester"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/creditsDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š Credits"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/departmentDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ« Department"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/enrollmentDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ Enrollment"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Progress"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/attendanceRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… Loading attendance..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#66BB6A" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavigate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ—ºï¸  Navigate to Classroom"
                android:textSize="16sp"
                android:backgroundTint="#42A5F5"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmailProfessor"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âœ‰ï¸  Email Professor"
                android:textSize="16sp"
                android:backgroundTint="#42A5F5"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAnnouncements"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“¢  View Announcements"
                android:textSize="16sp"
                android:backgroundTint="#FF9800"
                app:cornerRadius="12dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>