<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <!-- Student Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/gradient_header">

        <!-- Full name -->
        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <!-- Student ID -->
        <TextView
            android:id="@+id/studentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 12345678"
            android:textSize="18sp"
            android:textColor="#E3F2FD"
            android:layout_marginBottom="8dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/dateHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, September 30"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Next class info -->
        <TextView
            android:id="@+id/nextClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: CSCI 101 - 10:00 AM"
            android:textSize="16sp"
            android:textColor="#B3E5FC"/>

    </LinearLayout>

    <!-- giving it that frozen gradient aspect -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- NFC Check In Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckIn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Check In to Class"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="40dp"
                app:elevation="4dp"
                android:backgroundTint="#66BB6A"
                android:gravity="center"/>

            <!-- First row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinalsSchedule"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:text="My Courses"
                    android:textSize="16sp"
                    app:cornerRadius="32dp"
                    app:elevation="2dp"
                    android:backgroundTint="#42A5F5"
                    android:gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSocial"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:text="Socialeaze"
                    android:textSize="16sp"
                    app:cornerRadius="32dp"
                    app:elevation="2dp"
                    android:backgroundTint="#42A5F5"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Second row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCampusMap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:text="Campus\nMap"
                    android:textSize="16sp"
                    app:cornerRadius="32dp"
                    app:elevation="2dp"
                    android:backgroundTint="#42A5F5"
                    android:gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSchedule"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:text="My\nSchedule"
                    android:textSize="16sp"
                    app:cornerRadius="32dp"
                    app:elevation="2dp"
                    android:backgroundTint="#42A5F5"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Sign out button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sign Out"
                app:cornerRadius="24dp"
                app:elevation="2dp"
                android:backgroundTint="#EF5350"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>